{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>platform-engineering-org/.github"
  ],
  "packageRules": [
    {
      "description": "Ungroup osbuild from other dependencies",
      "groupName": null,
      "matchPackageNames": ["osbuild/osbuild"],
      "schedule": ["at any time"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["Containerfile"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version\\s*=\\s*\"(?<currentValue>.*)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
    }
  ]
}
