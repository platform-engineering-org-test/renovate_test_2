{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>platform-engineering-org/.github"
  ],
  "packageRules": [
    {
      "description": "Ungroup osbuild from other dependencies",
      "groupName": null,
      "matchPackageNames": ["osbuild/osbuild"],
      "schedule": ["at any time"]
    },
    {
      "matchPackageNames": ["quay.io/fedora/fedora"],
      "matchManagers": ["dockerfile","github-actions"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["Containerfile$",".github/workflows/*.yml"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sFROM\\s.*:(?<currentValue>.*)",
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\container:\\s.*:(?<currentValue>.*)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
    }
  ]
}
